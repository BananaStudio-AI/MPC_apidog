# =============================================================================
# AI Infrastructure Environment Configuration
# Local Docker-based AI infrastructure for Windows Docker Desktop
# =============================================================================

# -----------------------------------------------------------------------------
# LiteLLM Gateway Configuration
# -----------------------------------------------------------------------------
# Base URL for LiteLLM Gateway (use service name for Docker networking)
LITELLM_BASE_URL=http://litellm:4000

# Optional: LiteLLM Master Key for authentication
LITELLM_MASTER_KEY=

# Optional: API Key for MPC-API to authenticate with LiteLLM
LITELLM_API_KEY=

# -----------------------------------------------------------------------------
# LLM Provider API Keys
# -----------------------------------------------------------------------------
# OpenAI API Key (required for GPT models)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Anthropic API Key (required for Claude models)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# PostgreSQL password (shared across services)
POSTGRES_PASSWORD=postgres

# Redis password (optional, leave empty for no password)
REDIS_PASSWORD=

# -----------------------------------------------------------------------------
# Dify Configuration
# -----------------------------------------------------------------------------
# Dify secret key for encryption (change in production)
DIFY_SECRET_KEY=dify-secret-key-change-me

# -----------------------------------------------------------------------------
# Activepieces Configuration
# -----------------------------------------------------------------------------
# Activepieces API key (change to random string)
ACTIVEPIECES_API_KEY=change-me-to-random-string

# Activepieces encryption key (change to random string)
ACTIVEPIECES_ENCRYPTION_KEY=change-me-to-random-string

# Activepieces JWT secret (change to random string)
ACTIVEPIECES_JWT_SECRET=change-me-to-random-string

# -----------------------------------------------------------------------------
# MPC-API Configuration
# -----------------------------------------------------------------------------
# Port for MPC-API service
PORT=3000

# Node environment
NODE_ENV=production

# -----------------------------------------------------------------------------
# Legacy API Configuration (for backward compatibility)
# -----------------------------------------------------------------------------
# Apidog MCP Server Configuration
# IMPORTANT: Get your token from Team Settings → Authorization → API Access Tokens
# (NOT from Account Settings - account tokens cause 403 errors)
APIDOG_ACCESS_TOKEN=

# Apidog Project IDs
APIDOG_PROJECT_ID=1128155
APIDOG_PROJECT_ID_API_HUB=1128155
APIDOG_PROJECT_ID_COMET=
APIDOG_PROJECT_ID_FAL=

# Comet API Key (for model registry)
COMET_API_KEY=

# FAL API Key (for creative models)
FAL_API_KEY=

# Cursor API Key
CURSOR_API_KEY=

# -----------------------------------------------------------------------------
# Service URLs (for reference)
# -----------------------------------------------------------------------------
# Access services at:
# - Dify: http://localhost (port 80)
# - Dify API: http://localhost:5001
# - Langflow: http://localhost:7860
# - Activepieces: http://localhost:8080
# - LiteLLM Gateway: http://localhost:4000
# - MPC-API: http://localhost:3000
# -----------------------------------------------------------------------------
