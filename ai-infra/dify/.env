# Database Configuration
DB_USERNAME=dify
DB_PASSWORD=dify_password_local_dev_12345
DB_HOST=db
DB_PORT=5432
DB_DATABASE=dify

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
