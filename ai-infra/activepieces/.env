# ============================================
# Activepieces Local Development Environment
# ============================================

# PostgreSQL Configuration
AP_POSTGRES_HOST=postgres
AP_POSTGRES_PORT=5432
AP_POSTGRES_DATABASE=activepieces
AP_POSTGRES_USER=activepieces
AP_POSTGRES_PASSWORD=activepieces_pg_local_dev_secure_12345
AP_POSTGRES_USE_SSL=false

# Redis Configuration
AP_REDIS_HOST=redis
AP_REDIS_PORT=6379
AP_REDIS_PASSWORD=activepieces_redis_local_dev_secure_67890
AP_REDIS_DB=0
AP_REDIS_USE_SSL=false

# Application Security (CHANGE IN PRODUCTION!)
# These keys must be at least 32 characters long
AP_ENCRYPTION_KEY=activepieces-encryption-key-local-dev-must-be-32-chars-minimum-abc123
AP_JWT_SECRET=activepieces-jwt-secret-local-dev-change-in-production-xyz789-secure
AP_API_KEY=activepieces-api-key-local-dev-change-in-production-secure-key-123

# Application URLs
AP_FRONTEND_URL=http://localhost:8080
AP_WEBHOOK_URL=http://localhost:8080

# Engine Configuration
AP_ENGINE_EXECUTABLE_PATH=dist/packages/engine/main.js
AP_EXECUTION_MODE=UNSANDBOXED
AP_SANDBOX_RUN_TIME_SECONDS=600

# Webhooks & Triggers
AP_WEBHOOK_TIMEOUT_SECONDS=30
AP_TRIGGER_DEFAULT_POLL_INTERVAL=5

# Environment
AP_ENVIRONMENT=dev
AP_LOG_LEVEL=INFO

# Queue Configuration
AP_QUEUE_MODE=MEMORY

# ============================================
# MPC-API Integration
# (Per ACTIVEPIECES_MCP_API_INTEGRATION.md)
# ============================================

# MPC-API Base URL
# Use host.docker.internal for local host access from container
# Or use actual service name if both are in same Docker network
MPC_API_BASE_URL=http://host.docker.internal:3000

# MPC-API Authentication
MPC_API_KEY=mpc-api-secure-key-local-dev-change-in-production-12345

# MPC-API Timeout (milliseconds)
MPC_API_TIMEOUT=120000

# ============================================
# Optional: External Integrations
# ============================================

# Notion Integration (optional)
NOTION_CLIENT_ID=
NOTION_CLIENT_SECRET=

# Google Integration (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Slack Integration (optional)
SLACK_CLIENT_ID=
SLACK_CLIENT_SECRET=

# ============================================
# Email Configuration (optional)
# ============================================
AP_SMTP_HOST=
AP_SMTP_PORT=587
AP_SMTP_USER=
AP_SMTP_PASSWORD=
AP_SMTP_USE_SSL=false
AP_SMTP_SENDER_EMAIL=

# ============================================
# SECURITY WARNING
# ============================================
# These are DEVELOPMENT-ONLY credentials.
# Never use these values in production!
# Generate strong random secrets for production:
# - openssl rand -hex 32  (for encryption key)
# - openssl rand -base64 32 (for JWT secret)
# - openssl rand -base64 24 (for API key)
