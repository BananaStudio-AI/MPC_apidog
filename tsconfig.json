{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "types": ["node"],
    "allowJs": true,
    "checkJs": false,
    "noEmit": false,
    "isolatedModules": true
  },
  "include": [
    "scripts/**/*",
    "apis/**/*",
    "apidog/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "apidog/generated",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
